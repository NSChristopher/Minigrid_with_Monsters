{
    "build": {
      "dockerfile": "Dockerfile"
    },
    "features": {
      "ghcr.io/devcontainers/features/desktop-lite:1": {}
    },
    "forwardPorts": [6080, 5901],
    "portsAttributes": {
      "6080": {
        "label": "noVNC"
      },
      "5901": {
        "label": "VNC"
      }
    },
    "runArgs": ["--shm-size=1g"],
    "customizations": {
      "vscode": {
        "extensions": [
          "ms-python.python",
          "ms-toolsai.jupyter",
          "GitHub.copilot"
        ]
      }
    },
    "postCreateCommand": "python -m venv venv && source venv/bin/activate && pip install -r requirements.txt",
    "postStartCommand": "vncserver :1 -geometry 1280x800 -depth 24 -SecurityTypes None && websockify --web=/usr/share/novnc/ 6080 localhost:5901 & tail -f /dev/null"
  }